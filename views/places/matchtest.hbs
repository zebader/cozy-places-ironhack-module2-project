      <input type="hidden" value='{{finalVenues.venuesIDarrayB.name}}' name='venuesIDarrayName_RB'>
      <input type="hidden" value='{{finalVenues.venuesIDarrayB.location}}' name='venuesIDarrayAddress_RB'>
      <input type="hidden" value='{{finalVenues.venuesIDarrayB.city}}' name='venuesIDarrayCity_RB'>

</form>
</section>

